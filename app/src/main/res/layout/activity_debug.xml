<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id = "@+id/randomdatalabels"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:orientation= "vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_latitude"
            android:layout_margin="@dimen/text_padding_body"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_longitude"
            android:layout_margin="@dimen/text_padding_body"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_light"
            android:layout_margin="@dimen/text_padding_body"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_humidity"
            android:layout_margin="@dimen/text_padding_body"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_pressure"
            android:layout_margin="@dimen/text_padding_body"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_temperature"
            android:layout_margin="@dimen/text_padding_body"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_userid"
            android:layout_margin="@dimen/text_padding_body"/>

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/randomdatavalues"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_toRightOf="@id/randomdatalabels"
        android:orientation= "vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_nodata"
            android:layout_margin="@dimen/text_padding_body"
            android:id="@+id/randomlatitudevalue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_nodata"
            android:layout_margin="@dimen/text_padding_body"
            android:id="@+id/randomlongitudevalue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_nodata"
            android:layout_margin="@dimen/text_padding_body"
            android:id="@+id/randomlightvalue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_nodata"
            android:layout_margin="@dimen/text_padding_body"
            android:id="@+id/randomhumidityvalue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_nodata"
            android:layout_margin="@dimen/text_padding_body"
            android:id="@+id/randompressurevalue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_nodata"
            android:layout_margin="@dimen/text_padding_body"
            android:id="@+id/randomtemperaturevalue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_content_body"
            android:text = "@string/text_values_nodata"
            android:layout_margin="@dimen/text_padding_body"
            android:id="@+id/randomuserid"/>
    </LinearLayout>
</RelativeLayout>

